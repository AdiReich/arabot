{
    "python.testing.pytestEnabled": true,
    "python.linting.pylintArgs": [
        "--disable=missing-docstring,mixed-indentation,bad-continuation,invalid-name,inconsistent-return-statements,missing-final-newline,line-too-long,wrong-import-order,cell-var-from-loop,wildcard-import,unused-wildcard-import,no-member",
        "--max-line-length=100",
        "--ignored-argument-names=ctx"
    ],
    "python.linting.flake8Args": [
        "--max-line-length=100",
        "--ignore=E402,W503,E501,E722,E731,E741,E203,F405,F403"
    ],
    "python.formatting.blackArgs": ["--line-length=100"],
    "python.terminal.activateEnvInCurrentTerminal": true
}
